<Window x:Class="TcpFile.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TcpFile.Demo"
        mc:Ignorable="d" FontSize="30" WindowStartupLocation="CenterScreen"
        Title="MainWindow" SizeToContent="WidthAndHeight">
    <Grid Margin="8">
        <StackPanel Orientation="Horizontal" Height="100">
            <Button Content="Server" Width="200" Click="btnOpenServer_Click" />
            <Button Content="Client" Width="200" Margin="20,0,0,0" Click="btnOpenClient_Click" />
        </StackPanel>
    </Grid>
</Window>
